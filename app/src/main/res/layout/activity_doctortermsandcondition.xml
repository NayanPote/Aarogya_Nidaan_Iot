                android:layout_height="wrap_content"
                android:text="b. Loss or corruption of data during transmission."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Damages resulting from the App's unavailability, interruptions, or errors."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. Any harm, injury, or death resulting from medical advice or treatment provided by you."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.Indemnification"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You agree to indemnify and hold harmless the App, its developers, and affiliates from any claims, liabilities, damages, or expenses (including legal fees) arising from your use of the App, including but not limited to:"
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Misdiagnoses or incorrect medical advice."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Breach of these terms."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Violation of patient privacy laws."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. Any harm, injury, or death of a patient."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Disclaimers"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App is provided 'as is' without warranties of any kind, express or implied. This includes but is not limited to warranties of accuracy, reliability, or fitness for a specific purpose."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. Termination of Use"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App reserves the right to suspend or terminate your account if you breach these terms or engage in unethical, illegal, or harmful practices."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10. Governing Law and Dispute Resolution"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="These terms are governed by the laws of India. Any disputes will be resolved through arbitration or in courts located in India, as applicable."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11. Acceptance of Terms"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering and using the App, you acknowledge that you have read, understood, and agree to these terms and conditions."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
