                android:layout_height="wrap_content"
                android:text="b. App Owner Indemnity"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
