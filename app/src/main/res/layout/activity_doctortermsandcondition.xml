<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    tool:context=".doctortermsandcondition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/toolbar_gradiant">

        <ImageButton
            android:id="@+id/doctortermsback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:src="@drawable/back"
            android:tint="@color/black"
            android:background="@color/transparent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms And Conditions"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering as a doctor on Aarogya Nidaan App and using its services, you agree to the following terms and conditions. Please read them carefully before proceeding."
                android:textSize="18sp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Purpose of the App:"
                android:layout_marginStart="13dp"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App is designed to facilitate communication and data sharing between doctors and patients. It does not provide medical advice or guarantee accurate health data."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Doctor's Responsibilities"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Licensure and Certification"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You affirm that you hold a valid medical license and are authorized to practice medicine in your jurisdiction. You must provide accurate information during registration and promptly update any changes."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Accuracy of Diagnosis and Advice"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are solely responsible for interpreting patient data and providing medical advice. The App and its developers are not liable for any medical outcomes, including errors in diagnosis, advice, or treatment."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Professional Conduct"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You agree to adhere to all applicable laws, regulations, and medical ethics while using the App."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Patient Outcomes and Responsibility"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You acknowledge and agree that the App merely facilitates the exchange of health data and communication with patients. In the event of any adverse outcomes, complications, or harm to a patient:"
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Doctor's Sole Responsibility"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You assume full responsibility for any medical decisions, advice, or treatments provided to patients."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
