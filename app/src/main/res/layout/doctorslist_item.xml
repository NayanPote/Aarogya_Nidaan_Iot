<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_gradient_background"
        android:padding="16dp">

        <!-- Top Section: Avatar and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Doctor Avatar with circular frame -->
            <FrameLayout
                android:id="@+id/avatar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <!-- Gradient Ring (Outer Circle) -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_ring_gradient"
                    />

                <!-- Circular Profile Image inside CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <ImageView
                        android:id="@+id/doctoravatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/doctor3"
                        android:contentDescription="Doctor's photo" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Doctor Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Doctor Name with Verified Badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/doctorlistname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dr. Nayan Pote"
                        android:textColor="@color/main_dark"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/verified_badge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_verify"
                        android:contentDescription="Verified Doctor" />
                </LinearLayout>

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:id="@+id/doctor_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="4.8"
                        android:progressTint="#FFB300"
                        android:isIndicator="true" />

                    <TextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textColor="#FFB300"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="6dp"/>

                    <TextView
                        android:id="@+id/reviews_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(236)"
                        android:textColor="@color/main_dark"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>

                <!-- Specialization -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/premium_pill_background"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/stethoscope"
                        app:tint="@color/main_dark"/>

                    <TextView
                        android:id="@+id/doctorlistspe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Developer"
                        android:textColor="@color/main_dark"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/premium_pill_background"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/locationpin"
                        app:tint="@color/main_dark" />

                    <TextView
                        android:id="@+id/doclistcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Nagpur"
                        android:textColor="@color/main_dark"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Book Appointment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_appointment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:text="Book Appointment"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="#4CAF50"
            app:rippleColor="#81C784"
            app:icon="@drawable/colorcalander"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>