<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main"
    android:backgroundTint="@color/background_light"
    tool:context=".patienttermsandcondition">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_light"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/patienttermsback"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back"
                app:tint="@color/main_dark" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/patienttermsback"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/main_dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering as a patient on Aarogya Nidaan App and using its services, you agree to the following terms and conditions. Please read them carefully before proceeding."
                android:textSize="18sp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Purpose of the App:"
                android:layout_marginStart="13dp"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App facilitates the collection, storage, and transmission of health data and communication between you and your doctor. The App does not provide medical advice or diagnosis, and it is not intended to replace professional medical care."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Patient Responsibilities"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Accuracy of Information"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You agree to provide accurate and up-to-date health information during registration and throughout the use of the App. This includes details about your medical history, medications, and any other relevant health data."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Health Data"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You acknowledge that the health data you input into the App may be used by your doctor for medical purposes. You are responsible for ensuring the accuracy of this data."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Communication with Healthcare Providers"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="While the App enables communication between you and your doctor, it does not guarantee immediate responses. You should not rely solely on the App for urgent medical advice or emergencies."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Data Security and Privacy"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Confidentiality of Your Health Data"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are committed to protecting your personal and health data. The App complies with applicable privacy laws, including [Applicable Data Protection Laws, e.g., GDPR, HIPAA], and your data will only be shared with your doctor or healthcare providers with your consent."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Third-Party Access"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your health data may be shared with third parties only with your consent or as required by law. You understand that while we take measures to protect your data, no system can be completely secure, and there is always a risk of data breaches."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Limitation of Liability:"
                android:textColor="@color/main_dark"
                android:layout_marginStart="15dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App is not responsible for any harm, injury, or complications that may result from medical advice, diagnosis, or treatment provided by your doctor based on the information transmitted through the App. The App is also not liable for:"
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Any delays in communication or data transmission."
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Any medical errors resulting from inaccurate or incomplete data provided by you."
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Any technical issues that may affect the availability or functionality of the App.."
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Indemnification"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
