                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Inaccurate health data."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Unauthorized access to your account or data."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Misuse of the Appâ€™s services."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Emergency Situations"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App is not intended for use in emergencies. In case of a medical emergency, you should immediately contact emergency services or visit the nearest healthcare facility. The App should not be used to diagnose or treat urgent medical conditions."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. No Guarantee of Treatment Outcomes"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You acknowledge that the App facilitates communication with healthcare professionals, but the effectiveness of any medical treatment or advice provided is not guaranteed. Treatment decisions are made by your doctor, and the App has no control over the medical decisions made by your healthcare providers."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Termination of Use"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App reserves the right to suspend or terminate your account if you breach these terms, engage in illegal activity, or misuse the App in any way."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9. Governing Law and Dispute Resolution"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="These terms are governed by the laws of [Your Country/State]. Any disputes will be resolved through arbitration or in courts located in [Your Location], as applicable."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10. Amendments to the Terms"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We reserve the right to update or modify these Terms and Conditions at any time. Any changes will be posted on this page, and your continued use of the App after such changes constitutes acceptance of the updated terms."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11. Acceptance of Terms"
                android:textColor="@color/main_dark"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering and using the App, you acknowledge that you have read, understood, and agree to these terms and conditions."
                android:textSize="16dp"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>