<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctor_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:ignore="HardcodedText">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Bar Layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:fitsSystemWindows="true"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/background_light"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Menu Button - Left Side -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/docnavtoggle"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        app:icon="@drawable/menu"
                        app:iconTint="@color/main_dark"
                        app:iconSize="24dp"
                        android:backgroundTint="@color/transparent"
                        android:contentDescription="Open navigation menu" />

                    <!-- Center Content: Logo + Title -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/aarogyanidaanlogo"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="App Logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aarogya Nidaan"
                            android:textColor="@color/main_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/latoregular"
                            android:letterSpacing="0.02" />

                    </LinearLayout>

                    <!-- Notification Section - Right Side -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/docchat"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/lottie5"
                            android:background="@color/back"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:id="@+id/chatBadge"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/badge_background"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:text="3" />

                    </FrameLayout>

                </RelativeLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content with NestedScrollView -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_light"
                android:padding="16dp">

                <!-- Welcome Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Doctor"
                        android:textColor="@color/main_dark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Here's your dashboard overview"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Upcoming Appointments Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upcoming Appointments"
                        android:textColor="@color/main_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/viewAllAppointments"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="View All"
                        android:textColor="@color/main_dark"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Appointments Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/back">

                    <RelativeLayout
                        android:id="@+id/commingappoint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button1">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/doctorAppointmentsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:clipToPadding="false"
                            android:scrollbars="vertical" />

                        <TextView
                            android:id="@+id/emptyAppointmentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="No upcoming appointments"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:visibility="gone" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Health Articles Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Health Articles"
                        android:textColor="@color/main_dark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/relatedarticles"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="View All"
                        android:textColor="@color/main_dark"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Articles Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/articlesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />

                    <!-- Progress bar (optional, uncomment if needed) -->
                    <!--
                    <ProgressBar
                        android:id="@+id/articlesProgressBar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="@color/accent" />
                    -->

                    <LinearLayout
                        android:id="@+id/emptyArticlesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="32dp">

                        <TextView
                            android:id="@+id/emptyarticletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No articles available at the moment"
                            android:textAlignment="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check back later for health updates"
                            android:textAlignment="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/navchatbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="40dp"
            app:fabSize="normal"
            app:backgroundTint="@color/back"
            app:borderWidth="1dp"
            app:rippleColor="@color/back"
            app:elevation="12dp"
            app:pressedTranslationZ="16dp"
            android:src="@drawable/chatbot"
            app:tint="@null"
            app:maxImageSize="35dp"
            android:scaleType="centerInside"
            android:contentDescription="AI Assistant" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/doctornavheader"
        app:menu="@menu/doctornavigationmenu"
        app:itemTextColor="@color/main_dark"
        app:itemIconTint="@color/main_dark"
        app:itemHorizontalPadding="16dp"
        app:itemVerticalPadding="12dp"
        app:itemShapeFillColor="@color/transparent"
        app:itemShapeInsetStart="12dp"
        app:itemShapeInsetEnd="12dp" />

</androidx.drawerlayout.widget.DrawerLayout>